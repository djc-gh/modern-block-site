{
  "name": "theme",
  "version": "1.0.0",
  "description": "Tailwind CSS theme for Django",
  "scripts": {
    "build": "npx tailwindcss -i ./static/src/styles.css -o ./static/css/dist/styles.css --minify",
    "dev": "npx tailwindcss -i ./static/src/styles.css -o ./static/css/dist/styles.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  }
}
